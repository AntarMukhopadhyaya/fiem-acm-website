---

import BaseLayout from "../layouts/BaseLayout.astro";


---

<BaseLayout>
  <section class="bg-blue-50 py-20">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold text-blue-800">
        Welcome to FIEM ACM Student Chapter
      </h1>
      <p class="mt-4 text-xl text-gray-700">
        Empowering students to innovate and learn through technology.
      </p>
      <a
        href="#about"
        class="inline-block bg-blue-600 text-white px-6 py-3 mt-8 rounded-lg shadow hover:bg-blue-700 transition"
      >
        Learn More
      </a>
    </div>
  </section>
  <section id="about" class="py-4">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-gray-800">About Us</h2>
      <p class="mt-4 text-lg text-gray-600">
        The FIEM ACM Student Chapter aims to bridge the gap between students and
        the tech industry through workshops, events, and collaborative learning.
      </p>
    </div>
  </section>
  <section id="events" class="bg-gray-100 py-20">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-4xl font-bold text-center text-gray-800">
        Upcoming Events
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
        <div class="bg-white shadow rounded-kg p-6 text-center">
          <h3 class="text-2xl font-semibold text-blue-800">Hackspire</h3>
          <p class="text-gray-600 mt-2">
            Innovate and create real-world solutions.
          </p>
          <a href="#" class="inline-block mt-4 text-blue-600 hover:underline"
            >Learn More</a
          >
        </div>
        <div class="bg-white shadow rounded-lg p-6 text-center">
          <h3 class="text-2xl font-semibold text-blue-800">Tech Talks</h3>
          <p class="text-gray-600 mt-2">
            Engage with industry experts and leaders.
          </p>
          <a href="#" class="inline-block mt-4 text-blue-600 hover:underline"
            >Learn More</a
          >
        </div>
        <div class="bg-white shadow rounded-lg p-6 text-center">
          <h3 class="text-2xl font-semibold text-blue-800">Workshops</h3>
          <p class="text-gray-600 mt-2">
            Hands-on learning with experienced mentors.
          </p>
          <a href="#" class="inline-block mt-4 text-blue-600 hover:underline"
            >Learn More</a
          >
        </div>
      </div>
    </div>
  </section>
  <section id="contact" class="py-20">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-gray-800">Contact Us</h2>
      <p class="mt-4 text-lg text-gray-600">
        Have questions? Get in touch with us today!
      </p>
      <a href="mailto:test@gmail.com" class="inline-block bg-blue-600 text-white px-6 py-3 mt-8 rounded-lg shadow hover:bg-blue-700 transition">
        Send an Email
      </a>
    </div>
  </section>
</BaseLayout>
